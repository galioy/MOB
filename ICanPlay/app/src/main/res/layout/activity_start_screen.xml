<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".StartScreen"
    android:id="@+id/startScreen">

    <EditText
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/T_name"
        android:text="Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="Log me in!"
        android:id="@+id/B_log_in"
        android:layout_marginBottom="97dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:onClick="register"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="Register me!"
        android:id="@+id/B_register"
        android:layout_alignTop="@+id/B_log_in"
        android:layout_alignRight="@+id/T_name"
        android:layout_alignEnd="@+id/T_name" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/B_register"
        android:layout_alignEnd="@+id/B_register" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/editText3"
        android:layout_below="@+id/T_name"
        android:layout_alignRight="@+id/T_name"
        android:layout_alignEnd="@+id/T_name"
        android:layout_marginTop="38dp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="School"
        android:id="@+id/textView2"
        android:layout_toStartOf="@+id/editText3"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_alignTop="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone nr."
        android:id="@+id/textView3"
        android:layout_toStartOf="@+id/editText2"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

